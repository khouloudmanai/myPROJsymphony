    <div class="container mt-4 d-flex justify-content-evenly">
        {% for item in vehicules %}
            <div class="card text-dark bg-primary mb-3 mr-4 bg-secondary"
                 style="max-width: 20rem;">
                <div class="card-header text-center"> {{ item.title }} </div>
                <div class="card-body text-center">
                    <h4 class="card-title"> {{ item.marque }} </h4>
                    <img class="text-center" src="{{ item.photo }}" alt="" width="200px">
                    <p class="card-text"> {{ item.description }} </p>
                    <hr>
                    <p>Prix Journalier : {{ item.prixjournalier }} €</p>
                    {% if app.user %}
                        <a href=" {{ path('show', {
                            id: item.id
                        }) }} " class="btn btn-info"> En Savoir Plus</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-secondary"> Connecter-Vous ! </a>
                    {% endif %}

                </div>
            </div>
