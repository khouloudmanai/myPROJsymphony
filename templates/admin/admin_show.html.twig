{% extends 'base.html.twig' %}

{% block title %} BackOffice {% endblock %}

{% block body %}


    <div class="text-center accordion m-5" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="text-center accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                NOTRE LOUEUR
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <p> <h2>Personne ayant mit en ligne l'annonce :</h2> <br> Prénom : {{ item.idmembre.prenom }} <br> Nom : {{ item.idmembre.nom }} <br> Email :  {{ item.idmembre.email }} </p>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                INFORMATION SUR LA LOCATION
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <p> <h2> Informations sur l'annonce </h2> Titre de l'annonce de location : {{ item.idvehicule.title }}  <br> Marque de la voiture : {{ item.idvehicule.marque }} <br> Modèle de la voiture {{ item.idvehicule.modele }} <br> <img src="{{ item.idvehicule.photo }}"  height="150px" widht="150px" alt=""> <br> Prix Journalier : {{ item.idvehicule.prixjournalier }}  </p>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                    PRIX TOTALE
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse show" aria-labelledby="headingThree" data-bs-parent="#accordionExample" style="">
                <div class="accordion-body">
                    <strong> <h2> Prix Total de votre commande ! </h2> <br> <h1>  {{ item.prixtotal }} € </h1> </strong>
                </div>
            </div>
        </div>
    </div>

{% endblock %}