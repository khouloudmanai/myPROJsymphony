{% extends 'base.html.twig' %}

{% block title %}Voitures index{% endblock %}

{% block body %}
    <h1>Voitures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Marque</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Prix_journalier</th>
                <th>Date_enregistrement</th>
                <th>Modele</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.title }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.description }}</td>
                <td>{{ voiture.photo }}</td>
                <td>{{ voiture.prixJournalier }}</td>
                <td>{{ voiture.dateEnregistrement ? voiture.dateEnregistrement|date('Y-m-d') : '' }}</td>
                <td>{{ voiture.modele }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voitures_new') }}">Create new</a>
{% endblock %}
